{
  "name": "scaley",
  "productName": "Scaley",
  "version": "0.0.0",
  "description": "Electron usb scale test",
  "license": "MIT",
  "repository": "nickroberts/scaley",
  "author": {
    "name": "Nick Roberts",
    "email": "djparadyme@gmail.com"
  },
  "electronVersion": "0.36.0",
  "scripts": {
    "test": "xo",
    "start": "electron main.js",
    "build": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --platform=darwin --arch=x64 --version=$npm_package_electronVersion",
    "build-all": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=$npm_package_electronVersion",
    "build-win": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --platform=win32 --arch=x64 --version=$npm_package_electronVersion",
    "postinstall": "electron-rebuild --pre-gyp-fix --force"
  },
  "files": [
    "main.js",
    "index.html",
    "app/app.js",
    "css/app.css"
  ],
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "electron-debug": "^0.5.0",
    "node-hid": "^0.5.1"
  },
  "devDependencies": {
    "electron-packager": "^5.0.0",
    "electron-prebuilt": "^0.36.0",
    "electron-rebuild": "^1.1.3",
    "xo": "^0.12.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ]
  }
}
